#include<stdio.h>
void main() {
    int a, b, c;
    char ch, choice;
    printf("\n Enter Operator");
    scanf("%c", &ch);
    scanf("%d%d", &a&b);
    do
    {
        ptintf("\n Enter Operator");
        scanf("%c", &ch);
        scanf("%d%d",&a&b);
        switch (ch)
        {
        case '+': c = a+b
        printf("%d", c);
            break;
        
        case '-': c = a-b
        printf("%d", c);
            break;
        
        default: printf("Invalid Input");
            break;
        }
        printf("Press 'Y' or 'y' to enter again");
        scanf("%c", &choice);
    } while(choice == 'Y' || choice =='y')
    
}